{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

  <!--Code tu template-->
  <br>
  <h3 class="log-sign-title mb-25 blue-color text-center h1">
    Bienvenue dans l'Annuaire Azobe
    <i class="fa fa-edit blue-color" aria-hidden="true"></i>
  </h3>
  <div class="row">
    <div class="col-lg-11 mx-auto">
      <div class="ts-grid-box" id="ts-grid-box">
        <div class="reg-page">
          {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
          {% endfor %}

          <!--Zone du formulaire-->
          {{ form_start(registrationForm) }}
          <p class="text-right pt-3 pb-4 blue-color">Tous les champs sont obligatoires (*)</p>
          <div class="row">
            <div class="col-sm-7">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title log-sign-title mb-25 blue-color text-center">Information liées à votre organisation</h5>
                  <!--Zone où j'insère les champs du formulaire-->

                  <!--Dénomination et Sigle-->
                  <div class="form-row">
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.denomination,{ 'label': 'Dénomination (*)' })}}
                    </div>
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.sigle, {'label':'Sigle (Optionnel)'})}}
                    </div>
                  </div>
                  <!--Statut Juridique et Siège-->
                  <div class="form-row">
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.statut_juridique, {'label':'Statut Juridique (*)'})}}
                    </div>
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.adresse,{ 'label': 'Adresse (*)' })}}
                    </div>
                  </div>
                  <!--Date de création et Récépissé-->
                  <div class="form-row">
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.date_creation, {'label':'Date de création (*)'})}}
                    </div>
                    <div class="col-lg-6 col-md-4 form-group">
                      {{form_row(registrationForm.numero_recepisse, {'label':'Numéro de récépicée (*)'})}}
                    </div>
                  </div>
                  <!--Province et ville-->
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.province, {'label':'Province (*)'})}}
                    </div>
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.ville, {'label':'Ville (*)'})}}
                    </div>
                  </div>
                  <!--Objet social et Description activité-->
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.social_objet,{'label':'Objet Social (*)'})}}
                    </div>
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.description_activite,{'label':'Description de l\'activité'})}}
		    		</div>
				  </div>
				  <!--Groupe d'activité, lien facebook et site-->
				  <div class="form-row">
						  <div class="col-lg-4 form-group">
    						{{form_row(registrationForm.groupe_activite,{'label':'Groupe d\'activité (*)'})}}
						  </div>
						 <div class="col-lg-3 form-group">
						    {{form_row(registrationForm.site_internet,{'label':'Lien Facebook (*)'})}}
						</div>
						<div class="col-lg-5 form-group">
							{{form_row(registrationForm.lien_facebook,{'label':'Lien site internet (*)'})}}
						</div>
				  </div>
				  
                </div>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title log-sign-title mb-25 blue-color text-center">Information liées au représentant</h5>
                  <!--Zone où j'insère les champs du formulaire-->

                  <!--Nom et Prénom du représentant.-->
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      {{ form_row(registrationForm.lastname, {'label':'Nom (*)'}) }}
                    </div>
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.firstname, {'label':'Prénom (*)'})}}
                    </div>
                  </div>
                  <!--Téléphone un téléphone deux-->
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.phone_number, {'label':'Téléphone 1 (*)'})}}
                    </div>
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.phone_number2, {'label':'Téléphone 2 (Optionnel)'})}}
                    </div>
                  </div>
                  <!--Email1 et Email 2-->
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      {{ form_row(registrationForm.email,{'label':'Email 1 (*)'}) }}
                    </div>
                    <div class="form-group col-md-6">
                      {{form_row(registrationForm.mail_contact2, {'label':'Email 2 (Optionnel)'})}}
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
          {{ form_end(registrationForm) }}

          <div class="border-top card-body text-center inscription_term ">Avez-vous déjà un compte?
            <a href="{{path('app_login')}}" class="blue-color">Se connecter</a>
          </div>
        </div>
        <!-- card.// -->

      </div>
      <!-- grid box end -->
    </div>
  </div>

  {% block script %}
    <script></script>
  {% endblock %}
{% endblock %}
