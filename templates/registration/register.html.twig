{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
   
    {{ form_start(registrationForm) }}
        {{form_row(registrationForm.denomination)}}
        {{form_row(registrationForm.sigle)}}
        {{form_row(registrationForm.statut_juridique)}}
       
        {{form_row(registrationForm.numero_recepisse)}}
       
        {{form_row(registrationForm.date_creation)}}
        {{form_row(registrationForm.adresse)}}
        
        {{form_row(registrationForm.province)}}
        {{form_row(registrationForm.ville)}}
        {{ form_row(registrationForm.lastname) }}
        {{form_row(registrationForm.firstname)}}
        {{form_row(registrationForm.phone_number)}}
        {{form_row(registrationForm.phone_number2)}}
        {{ form_row(registrationForm.email) }}
        {{form_row(registrationForm.mail_contact2)}}
        {{form_row(registrationForm.social_objet)}}
        {{form_row(registrationForm.description_activite)}}
        {{form_row(registrationForm.groupe_activite)}}
        {{form_row(registrationForm.themeActivite)}}
        {{form_row(registrationForm.site_internet)}}
        {{form_row(registrationForm.lien_facebook)}}
       

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{form_row(registrationForm.passwordConfirm)}}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
